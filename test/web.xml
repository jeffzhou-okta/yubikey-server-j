<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    
    <servlet>
        <servlet-name>verify</servlet-name>
        <servlet-class>com.yubico.wsapi.VerificationServlet</servlet-class>
        <load-on-startup>1</load-on-startup>

        <init-param>
            <param-name>db_user</param-name>
            <param-value>test_reader</param-value>
	</init-param>
        <init-param>
            <param-name>db_password</param-name>
            <param-value>password</param-value>
	</init-param>
        <init-param>
            <param-name>db_url</param-name>
            <param-value>jdbc:mysql://127.0.0.1/yubico_test?autoReconnect=true</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>manage</servlet-name>
        <servlet-class>com.yubico.wsapi.ManagementServlet</servlet-class>
        <load-on-startup>1</load-on-startup>

        <init-param>
            <param-name>shared_secret</param-name>
            <param-value>supersecret</param-value>
	</init-param>
        <init-param>
            <param-name>db_user</param-name>
            <param-value>test_manager</param-value>
	</init-param>
        <init-param>
            <param-name>db_password</param-name>
            <param-value>password</param-value>
	</init-param>
        <init-param>
            <param-name>db_url</param-name>
            <param-value>jdbc:mysql://127.0.0.1/yubico_test?autoReconnect=true</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>verify</servlet-name>
        <url-pattern>/verify</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>manage</servlet-name>
        <url-pattern>/manage</url-pattern>
    </servlet-mapping>

</web-app>
